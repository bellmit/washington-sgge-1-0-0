<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="RegimeMap">
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

  <!-- Result maps describe the mapping between the columns returned
      from a query, and the class properties.  A result map isnt
      necessary if the columns (or aliases) match to the properties
       exactly. -->
  <resultMap id="RegimeResult" type="Regime">
    <result property="id" column="id"/>
    <result property="nome" column="nome"/>
    <result property="descricao" column="descricao"/>
<result property="createUser" column="create_user"/>
<result property="createDateUTC" column="create_date"/>
<result property="modifyUser" column="modify_user"/>
<result property="modifyDateUTC" column="modify_date"/>
  </resultMap>

  <sql id="allRegimeColumns">
nome
,descricao
,create_date
,create_user
,modify_date
,modify_user

</sql>
<sql id="allRegimeValues">
#{nome},
#{descricao},
		#{createDateUTC},
		#{createUser},
		#{modifyDateUTC},
		#{modifyUser}
  </sql>


 <select id="fetchAllRegimes" resultMap="RegimeResult">
    SELECT id,
	<include refid="allRegimeColumns" />
   FROM regime ORDER BY id ASC
 </select>

 <select id="fetchRegimeById" parameterType="Integer" resultMap="RegimeResult">
    SELECT id,
	<include refid="allRegimeColumns" />
   FROM regime WHERE id = #{fetchid}
 </select>

 <select id="fetchAllRegimesRequest" parameterType="RegimeInquiryRequest" resultMap="RegimeResult">

		SELECT id,<include refid="allRegimeColumns" />
  		  FROM regime WHERE id IS NOT NULL <if test="emprId != null"> and emprId = emprId</if>
		<if test="id != null"> and id = id</if> ORDER BY id ASC

</select>

<select id="fetchRegimeRowCount" resultType="Integer">
		SELECT COUNT(*) AS RECORD_COUNT FROM regime WHERE id IS NOT NULL WHERE id IS NOT NULL <if test="emprId != null"> and emprId = emprId</if>
		<if test="id != null"> and id = id</if>

 </select>

 <insert id="insertRegime" parameterType="Regime" useGeneratedKeys="true" keyProperty="id">
 	INSERT INTO regime (
	<if test="id != null"><if test="id > 0">id,</if></if><include refid="allRegimeColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allRegimeValues" /> )
 </insert>
 <update id="updateRegime" parameterType="Regime">
   UPDATE regime SET
<if test="id!= null">id = #{id},</if>
<if test="nome!= null">nome = #{nome},</if>
<if test="descricao!= null">descricao = #{descricao},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deleteRegimeById" parameterType="Regime">
  DELETE FROM regime WHERE id = #{id}
 </delete>

 <delete id="deleteAllRegimes">
	DELETE FROM regime
  </delete>
</mapper>


