   WHERE
    id = #{id}
 </update>

<delete id="deletePlanoByServicoById" parameterType="PlanoByServico">
  DELETE FROM planoByServico WHERE id = #{id}
 </delete>

 <delete id="deleteAllPlanoByServicos">
	DELETE FROM planoByServico
  </delete>
