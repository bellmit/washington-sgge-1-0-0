<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AdvogadoMap">
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache" />
	<cache type="org.mybatis.caches.ehcache.EhcacheCache" />

	<!-- Result maps describe the mapping between the columns returned from
		a query, and the class properties. A result map isnt necessary if the columns
		(or aliases) match to the properties exactly. <resultMap id="advogadoResult"
		type="Advogado" extends=PessoaMap.PessoaResult"> -->
	<resultMap id="advogadoResult" type="Advogado" extends="PessoaMap.PessoaResult">
	</resultMap>

	<sql id="allAdvogadoColumns">
		id,
		<include refid="PessoaMap.allPessoaColumns" />
	</sql>
	<sql id="allAdvogadoValues">
		<include refid="PessoaMap.allPessoaValues" />
	</sql>

	<select id="fetchAllAdvogados" resultMap="advogadoResult">
		SELECT
		<include refid="allAdvogadoColumns" />
		FROM pessoa where pessoaTypeEnum = 9 ORDER BY id ASC
	</select>

	<select id="fetchAdvogadoById" parameterType="Integer"
		resultMap="advogadoResult">
		SELECT
		<include refid="allAdvogadoColumns" />
		FROM pessoa WHERE id = #{fetchid}
	</select>

	<select id="fetchAllAdvogadosRequest" parameterType="AdvogadoInquiryRequest"
		resultMap="advogadoResult">

		SELECT
		<include refid="allAdvogadoColumns" />
		FROM pessoa where pessoaTypeEnum = 9

		<if test="permissaoTypeEnumValue == 1">
			and id IS NOT NULL
		</if>
		<if test="permissaoTypeEnumValue != 1">
			<if test="emprId == null">
				<if test="emprIds != null">
					and emprId in

					<foreach item="item" index="index" collection="emprIds"
						open="(" separator="," close=")">
						#{item}
					</foreach>

				</if>
			</if>
			<if test="emprId != null"> and emprId = #{emprId}</if>
		</if>

		ORDER BY id ASC
		OFFSET ( #{startPage} * #{pageSize} )
		LIMIT #{pageSize}
	</select>

	<select id="fetchAdvogadoRowCount" resultType="Integer">
		SELECT COUNT(*) AS
		RECORD_COUNT FROM pessoa WHERE id IS NOT NULL and pessoaTypeEnum = 9
		<if test="permissaoTypeEnumValue == 1">
			and id IS NOT NULL
		</if>
		<if test="permissaoTypeEnumValue != 1">
			<if test="emprId == null">
				<if test="emprIds != null"> and emprId in

				<foreach item="item" index="index" collection="emprIds"
		             open="(" separator="," close=")">
		        #{item}
		    	</foreach>

				</if>
			</if>
			<if test="emprId != null"> and emprId = #{emprId}</if>
		</if>

	</select>
</mapper>


