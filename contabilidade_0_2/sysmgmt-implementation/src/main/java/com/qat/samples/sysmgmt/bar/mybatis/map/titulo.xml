<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="TituloMap">
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

  <!-- Result maps describe the mapping between the columns returned
      from a query, and the class properties.  A result map isnt
      necessary if the columns (or aliases) match to the properties
       exactly. 
       
       private Integer id;

	private String numero;
	private Integer parcela;
	private FormaPg formapg;
	private Long dataEmissao;
	private Long dataVencimento;
	private String docId;
	private DoisValores tipoDoc;
	private DoisValores formaCadastro;
	private DoisValores intervalo;
	private DoisValores categoria;
	private String observacao;
	private Double valor;
	private FinanceiroStatusEnum financeiroEnum;
	private List<BaixaTitulo> listBaixa;
       
       -->
  <resultMap id="TituloResult" type="Titulo">
    <result property="id" column="id"/>
    <result property="descricao" column="descricao"/>
    <result property="parcela" column="parcela"/>
    <result property="numero" column="numero"/>
    <result property="dataEmissao" column="dataEmissao"/>
    <result property="dataPagamento" column="dataPagamento"/>
    <result property="dataVencimento" column="dataVencimento"/>
    <result property="docId" column="docId"/>
    <result property="valor" column="valor"/>
    <result property="observacao" column="observacao"/>
    <result property="financeiroEnumValue" column="financeiroEnumValue"/>
	<result property="emprId" column="emprId"/>
	<result property="processId" column="processId"/>
	<result property="createUser" column="create_user"/>
	<result property="createDateUTC" column="create_date"/>
	<result property="modifyUser" column="modify_user"/>
	<result property="modifyDateUTC" column="modify_date"/>
	<collection property="listBaixa" column="id" select="BaixaTituloMap.fetchParentIdBaixaTitulos"/>
	<collection property="tipoDoc" column="tipoDoc" select="DoisValorMap.fetchDoisValorById"/>
	<collection property="formapg" column="formapg" select="FormaPgMap.fetchFormaPgById"/>
	<collection property="formaCadastro" column="formaCadastro" select="DoisValorMap.fetchDoisValorById"/>
	<collection property="intervalo" column="intervalo" select="DoisValorMap.fetchDoisValorById"/>
	<collection property="categoria" column="categoria" select="DoisValorMap.fetchDoisValorById"/>
	<collection property="situacao" column="situacao" select="DoisValorMap.fetchDoisValorById"/>
  </resultMap>

  <sql id="allTituloColumns">
	descricao,
    parcela,
    numero,
    dataEmissao,
    dataPagamento,
    dataVencimento,
    docId,
    valor,
    observacao,
    financeiroEnumValue,
	emprId,
	processId,
	tipoDoc,
	formapg,
	formaCadastro,
	intervalo,
	categoria,
	situacao,
	create_date,
	create_user,
	modify_date,
	modify_user
</sql>
<sql id="allTituloValues">

#{descricao},
#{parcela},
#{numero},
#{dataEmissao},
#{dataPagamento},
#{dataVencimento},
#{docId},
#{valor},
#{observacao},
#{financeiroEnumValue},
#{emprId},
#{processId},
#{tipoDoc.id},
#{formapg.id},
#{formaCadastro.id},
#{intervalo.id},
#{categoria.id},
#{situacao.id},
#{createDateUTC},
	#{createUser},
	#{modifyDateUTC},
	#{modifyUser}
  </sql>


 <select id="fetchAllTitulos" resultMap="TituloResult">
    SELECT id,
	<include refid="allTituloColumns" />
   FROM titulo ORDER BY id ASC
 </select>

 <select id="fetchTituloById" parameterType="Integer" resultMap="TituloResult">
    SELECT id,
	<include refid="allTituloColumns" />
   FROM titulo WHERE id = #{fetchid}
 </select>

 <select id="fetchAllTitulosRequest" parameterType="PagedInquiryRequest" resultMap="TituloResult">

		SELECT id,<include refid="allTituloColumns" />
  		  FROM titulo where 0 = 0  ORDER BY id ASC
		  OFFSET ( #{startPage} * #{pageSize} )
		  LIMIT #{pageSize}
</select>

<select id="fetchTituloRowCount" resultType="Integer">
		SELECT COUNT(*) AS RECORD_COUNT FROM titulo WHERE id IS NOT NULL

 </select>

 <insert id="insertTitulo" parameterType="Titulo" useGeneratedKeys="true" keyProperty="id">
 	INSERT INTO titulo (
	<if test="id != null"><if test="id > 0">id,</if></if><include refid="allTituloColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allTituloValues" /> )
 </insert>

 <update id="updateTitulo" parameterType="Titulo">
   UPDATE titulo SET
<if test="numero!= null">numero = #{numero},</if>
<if test="dataEmissao!= null">dataEmissao = #{dataEmissao},</if>
<if test="dataVencimento!= null">dataVencimento = #{dataVencimento},</if>
<if test="docId!= null">docId = #{docId},</if>
<if test="valor!= null">valor = #{valor},</if>
<if test="observacao!= null">observacao = #{observacao},</if>
<if test="financeiroEnumValue!= null">financeiroEnumValue = #{financeiroEnumValue},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deleteTituloById" parameterType="Titulo">
  DELETE FROM titulo WHERE id = #{id}
 </delete>

 <delete id="deleteAllTitulos">
	DELETE FROM titulo
  </delete>
</mapper>


