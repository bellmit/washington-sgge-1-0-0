<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ContaMap">
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

  <!-- Result maps describe the mapping between the columns returned
      from a query, and the class properties.  A result map isnt
      necessary if the columns (or aliases) match to the properties
       exactly. -->
  <resultMap id="ContaResult" type="Conta">
    <result property="id" column="id"/>
    <result property="descricao" column="descricao"/>
     <result property="saldo" column="saldo"/>
     <result property="dataUltLanc" column="dataUltLanc"/>
     <result property="numeroConta" column="numeroConta"/>
     <result property="observacao" column="observacao"/>
<result property="emprId" column="emprId"/>
<result property="processId" column="processId"/>
<result property="createUser" column="create_user"/>
<result property="createDateUTC" column="create_date"/>
<result property="modifyUser" column="modify_user"/>
<result property="modifyDateUTC" column="modify_date"/>
<collection property="tipoConta" column="tipoConta" select="DoisValorMap.fetchDoisValorById"/>
<collection property="listBaixa" column="id" select="BaixaTituloMap.fetchContaIdBaixaTitulos"/>
  </resultMap>

  <sql id="allContaColumns">
descricao
,saldo
,dataUltLanc
,numeroConta
,observacao
,tipoConta
,emprId
,processId
,create_date
,create_user
,modify_date
,modify_user

</sql>
<sql id="allContaValues">
#{descricao},
		#{saldo},
		#{dataUltLanc},
		#{numeroConta},
		#{observacao},
		#{tipoConta.id},
		#{emprId},
		#{processId},
		#{createDateUTC},
		#{createUser},
		#{modifyDateUTC},
		#{modifyUser}
  </sql>


 <select id="fetchAllContas" resultMap="ContaResult">
    SELECT id,
	<include refid="allContaColumns" />
   FROM conta ORDER BY id ASC
 </select>
 
  <select id="fetchAllContas" resultMap="ContaResult">
   select c.id, c.descricao,c.datavencimento,c.docid,c.valor as "valor titulo",(select d.descricao from doisvalor d where id = c.tipodoc ) as "Tipo Doc" ,(select d.descricao from doisvalor d where id = c.situacao ) as "Situacao" ,b.databaixa , b.valor as "Valor Baixa" from baixatitulo b, contaspagar c where c.id = b.parentId

 </select>

 <select id="fetchContaById" parameterType="Integer" resultMap="ContaResult">
    SELECT id,
	<include refid="allContaColumns" />
   FROM conta WHERE id = #{fetchid}
 </select>

 <select id="fetchAllContasRequest" parameterType="ContaInquiryRequest" resultMap="ContaResult">

		SELECT id,<include refid="allContaColumns" />
  		  FROM conta where 0 = 0 <if test="id != null"> and id = id</if> ORDER BY id ASC

</select>

<select id="fetchContaRowCount" resultType="Integer">
		SELECT COUNT(*) AS RECORD_COUNT FROM conta WHERE id IS NOT NULL <if test="id != null"> and id = id</if>

 </select>

 <insert id="insertConta" parameterType="Conta" useGeneratedKeys="true" keyProperty="id">
 	INSERT INTO conta (
	<if test="id != null"><if test="id > 0">id,</if></if><include refid="allContaColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allContaValues" /> )
 </insert>

 <update id="updateConta" parameterType="Conta">
   UPDATE conta SET
   <if test="saldo!= null"> saldo=#{saldo},</if>
   <if test="dataUltLanc!= null"> dataUltLanc=#{dataUltLanc},</if>
   <if test="descricao!= null"> descricao=#{descricao},</if>
   <if test="numeroConta!= null"> numeroConta=#{numeroConta},</if>
   <if test="observacao!= null"> observacao=#{observacao},</if>
   <if test="tipoConta!= null"> tipoConta=#{tipoConta.id},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deleteContaById" parameterType="Conta">
  DELETE FROM conta WHERE id = #{id}
 </delete>

 <delete id="deleteAllContas">
	DELETE FROM conta
  </delete>
</mapper>


