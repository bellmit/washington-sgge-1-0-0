  </resultMap>

  <sql id="allPessoaColumns">

nome
,nomePai
,nomeMae
,nomeConjugue
,estadoCivil
,tipoPessoa
,datanasc
,foto
,pessoaTypeEnum
,sexo
,emprId
,create_date
,create_user
,modify_date
,modify_user

</sql>
<sql id="allPessoaValues">
#{nome},
#{nomePai},
#{nomeMae},
#{nomeConjugue},
#{estadoCivil},
#{tipoPessoa},
#{datanasc},
#{foto},
#{pessoaTypeEnumValue},
#{sexo},
#{emprId},
		#{createDateUTC},
		#{createUser},
		#{modifyDateUTC},
		#{modifyUser}
  </sql>

 <insert id="insertPessoa" parameterType="Cliente" useGeneratedKeys="true" keyProperty="id">
   INSERT INTO pessoa (
	<if test="id != null"><if test="id > 0">id,</if></if><include refid="allPessoaColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allPessoaValues" /> )
 </insert>

 <update id="updatePessoa" parameterType="Cliente">
   UPDATE pessoa SET
<if test="nome!= null">nome = #{nome},</if>
<if test="nomePai!= null">nomePai = #{nomePai},</if>
<if test="nomeMae!= null">nomeMae = #{nomeMae},</if>
<if test="nomeConjugue!= null">nomeConjugue = #{nomeConjugue},</if>
<if test="estadoCivil!= null">estadoCivil = #{estadoCivil},</if>
<if test="tipoPessoa!= null">tipoPessoa = #{tipoPessoa},</if>
<if test="datanasc!= null">datanasc = #{datanasc},</if>
<if test="foto!= null">foto = #{foto},</if>
<if test="pessoaTypeEnumValue!= null">pessoaTypeEnum = #{pessoaTypeEnumValue},</if>
<if test="sexo!= null">sexo = #{sexo},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deletePessoaById" parameterType="Cliente">
  DELETE FROM pessoa WHERE id = #{id}
 </delete>

 <delete id="deleteAllPessoas">
	DELETE FROM pessoa
  </delete>
</mapper>


