<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CaixaMap">
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache" />
	<cache type="org.mybatis.caches.ehcache.EhcacheCache" />

	<!-- Result maps describe the mapping between the columns returned from
		a query, and the class properties. A result map isnt necessary if the columns
		(or aliases) match to the properties exactly. -->
	<resultMap id="CaixaResult" type="Caixa">
		<result property="id" column="id" />
		<result property="saldo" column="saldo" />
		<result property="emprId" column="emprId" />
		<result property="processId" column="processId" />
		<result property="createUser" column="create_user" />
		<result property="createDateUTC" column="create_date" />
		<result property="modifyUser" column="modify_user" />
		<result property="modifyDateUTC" column="modify_date" />
		<collection property="baixaTituloList" column="id"
			select="BaixaTituloMap.fetchBaixaTituloByCaixa" />
	</resultMap>

	<sql id="allCaixaColumns">
		saldo
		,emprId
		,processId
		,create_date
		,create_user
		,modify_date
		,modify_user

	</sql>
	<sql id="allCaixaValues">
		#{saldo},
		#{emprId},
		#{processId},
		#{createDateUTC},
		#{createUser},
		#{modifyDateUTC},
		#{modifyUser}
	</sql>


	<select id="fetchAllCaixas" resultMap="CaixaResult">
		SELECT id,
		<include refid="allCaixaColumns" />
		FROM caixa ORDER BY id ASC
	</select>

	<select id="fetchCaixaById" parameterType="Integer" resultMap="CaixaResult">
		SELECT id,
		<include refid="allCaixaColumns" />
		FROM caixa WHERE id = #{fetchid}
	</select>

	<select id="fetchAllCaixasRequest" parameterType="CaixaInquiryRequest"
		resultMap="CaixaResult">

		SELECT id,
		<include refid="allCaixaColumns" />
		FROM caixa where 0 = 0
		<if test="emprId != null"> and emprId = #{emprId}</if>
		ORDER BY id ASC
	</select>

	<select id="fetchCaixaRowCount" resultType="Integer">
		SELECT COUNT(*) AS RECORD_COUNT FROM caixa WHERE id IS NOT NULL
		<if test="emprId != null"> and emprId = #{emprId}</if>

	</select>

	<insert id="insertCaixa" parameterType="Caixa" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO caixa (
		<if test="id != null">
			<if test="id > 0">id,</if>
		</if>
		<include refid="allCaixaColumns" />
		)
		VALUES (
		<if test="id != null">
			<if test="id > 0">#{id},</if>
		</if>
		<include refid="allCaixaValues" />
		)
	</insert>

	<update id="updateCaixa" parameterType="Caixa">
		UPDATE caixa SET
		<if test="saldo!= null"> saldo=#{saldo},</if>
		<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
		<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
		WHERE
		id = #{id}
	</update>

	<delete id="deleteCaixaById" parameterType="Caixa">
		DELETE FROM caixa WHERE id = #{id}
	</delete>

	<delete id="deleteAllCaixas">
		DELETE FROM caixa
	</delete>
</mapper>


