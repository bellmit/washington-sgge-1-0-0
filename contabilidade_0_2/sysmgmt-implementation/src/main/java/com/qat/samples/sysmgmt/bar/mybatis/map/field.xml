<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="FieldMap">
 <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
 <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

  <!-- Result maps describe the mapping between the columns returned
      from a query, and the class properties.  A result map isnt
      necessary if the columns (or aliases) match to the properties
       exactly. -->
  <resultMap id="FieldResult" type="Field">
    <result property="id" column="id"/>
    <result property="nome" column="nome"/>
    <result property="status" column="status"/>
    <result property="obrigatorio" column="obrigatorio"/>
    <result property="campoBanco" column="campoBanco"/>
    <result property="tabelaBanco" column="tabelaBanco"/>
    <result property="tipo" column="tipo"/>
    <result property="label" column="label"/>
    <result property="tootip" column="tootip"/>

<result property="parentId" column="parentId"/>
<result property="tabelaEnumValue" column="tabelaEnumValue"/>
<result property="emprId" column="emprId"/>
<result property="processId" column="processId"/>
<result property="createUser" column="create_user"/>
<result property="createDateUTC" column="create_date"/>
<result property="modifyUser" column="modify_user"/>
<result property="modifyDateUTC" column="modify_date"/>
<collection property="help" column="help" select="RegimeMap.fetchRegimeById"/>
    <collection property="validacao" column="validacao" select="RegimeMap.fetchRegimeById"/>
    <collection property="role" column="role" select="RegimeMap.fetchRegimeById"/>
  </resultMap>

  <sql id="allFieldColumns">
,nome
,status
,obrigatorio
,campoBanco
,tabelaBanco
,tipo
,label
,tootip
,help
,validacao
,role
,parentId
,tabelaEnumValue
,emprId
,processId
,create_date
,create_user
,modify_date
,modify_user

</sql>
<sql id="allFieldValues">
#{nome},
#{status},
#{obrigatorio},
#{campoBanco},
#{tabelaBanco},
#{tipo},
#{label},
#{tootip},
#{help.id},
#{validacao.id},
#{role.id},
     #{parentId},
     #{tabelaEnumValue},
     #{emprId},
     #{processId},
     #{createDateUTC},
     #{createUser},
     #{modifyDateUTC},
     #{modifyUser}
  </sql>


 <select id="fetchAllFields" resultMap="FieldResult">
    SELECT id,
 <include refid="allFieldColumns" />
   FROM field ORDER BY id ASC
 </select>

 <select id="fetchFieldById" parameterType="Integer" resultMap="FieldResult">
    SELECT id,
 <include refid="allFieldColumns" />
   FROM field WHERE id = #{fetchid}
 </select>

 <select id="fetchAllFieldsRequest" parameterType="FieldInquiryRequest" resultMap="FieldResult">

     SELECT id,<include refid="allFieldColumns" />
           FROM field where 0 = 0 <if test="criteria.emprId != null"> and emprId = criteria.emprId</if> ORDER BY id ASC
       OFFSET ( #{startPage} * #{pageSize} )
       LIMIT #{pageSize}
</select>

<select id="fetchFieldRowCount" resultType="Integer">
     SELECT COUNT(*) AS RECORD_COUNT FROM field WHERE id IS NOT NULL <if test="criteria.emprId != null"> and emprId = criteria.emprId</if>

 </select>

 <insert id="insertField" parameterType="Field" useGeneratedKeys="true" keyProperty="id">
     INSERT INTO field (
 <if test="id != null"><if test="id > 0">id,</if></if><include refid="allFieldColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allFieldValues" /> )
 </insert>

 <update id="updateField" parameterType="Field">
   UPDATE field SET
<if test="nome!= null">nome = #{nome},</if>
<if test="status!= null">status = #{status},</if>
<if test="obrigatorio!= null">obrigatorio = #{obrigatorio},</if>
<if test="campoBanco!= null">campoBanco = #{campoBanco},</if>
<if test="tabelaBanco!= null">tabelaBanco = #{tabelaBanco},</if>
<if test="tipo!= null">tipo = #{tipo},</if>
<if test="label!= null">label = #{label},</if>
<if test="tootip!= null">tootip = #{tootip},</if>
<if test="help!= null">help = #{help.id},</if>
<if test="validacao!= null">validacao = #{validacao.id},</if>
<if test="role!= null">role = #{role.id},</if>
<if test="parentId!= null"> parentId=#{parentId},</if>
<if test="tabelaEnumValue!= null"> tabelaEnumValue=#{tabelaEnumValue},</if>
<if test="emprId!= null"> emprId=#{emprId},</if>
<if test="processId!= null"> processId=#{processId},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deleteFieldById" parameterType="Field">
  DELETE FROM field WHERE id = #{id}
 </delete>

 <delete id="deleteAllFields">
 DELETE FROM field
  </delete>
</mapper>


