<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MenuMap">
 <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
 <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

  <!-- Result maps describe the mapping between the columns returned
      from a query, and the class properties.  A result map isnt
      necessary if the columns (or aliases) match to the properties
       exactly. -->
  <resultMap id="MenuResult" type="Menu">
    <result property="id" column="id"/>
    <result property="nome" column="nome"/>
    <result property="label" column="label"/>
    <result property="status" column="status"/>
    <result property="nivel" column="nivel"/>

<result property="parentId" column="parentId"/>
<result property="tabelaEnumValue" column="tabelaEnumValue"/>
<result property="emprId" column="emprId"/>
<result property="processId" column="processId"/>
<result property="createUser" column="create_user"/>
<result property="createDateUTC" column="create_date"/>
<result property="modifyUser" column="modify_user"/>
<result property="modifyDateUTC" column="modify_date"/>
<collection property="permissao" column="permissao" select="RegimeMap.fetchRegimeById"/>
    <collection property="help" column="help" select="RegimeMap.fetchRegimeById"/>
  </resultMap>

  <sql id="allMenuColumns">
,nome
,label
,status
,nivel
,permissao
,help
,parentId
,tabelaEnumValue
,emprId
,processId
,create_date
,create_user
,modify_date
,modify_user

</sql>
<sql id="allMenuValues">
#{nome},
#{label},
#{status},
#{nivel},
#{permissao.id},
#{help.id},
     #{parentId},
     #{tabelaEnumValue},
     #{emprId},
     #{processId},
     #{createDateUTC},
     #{createUser},
     #{modifyDateUTC},
     #{modifyUser}
  </sql>


 <select id="fetchAllMenus" resultMap="MenuResult">
    SELECT id,
 <include refid="allMenuColumns" />
   FROM menu ORDER BY id ASC
 </select>

 <select id="fetchMenuById" parameterType="Integer" resultMap="MenuResult">
    SELECT id,
 <include refid="allMenuColumns" />
   FROM menu WHERE id = #{fetchid}
 </select>

 <select id="fetchAllMenusRequest" parameterType="MenuInquiryRequest" resultMap="MenuResult">

     SELECT id,<include refid="allMenuColumns" />
           FROM menu where 0 = 0 <if test="criteria.emprId != null"> and emprId = criteria.emprId</if> ORDER BY id ASC
       OFFSET ( #{startPage} * #{pageSize} )
       LIMIT #{pageSize}
</select>

<select id="fetchMenuRowCount" resultType="Integer">
     SELECT COUNT(*) AS RECORD_COUNT FROM menu WHERE id IS NOT NULL <if test="criteria.emprId != null"> and emprId = criteria.emprId</if>

 </select>

 <insert id="insertMenu" parameterType="Menu" useGeneratedKeys="true" keyProperty="id">
     INSERT INTO menu (
 <if test="id != null"><if test="id > 0">id,</if></if><include refid="allMenuColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allMenuValues" /> )
 </insert>

 <update id="updateMenu" parameterType="Menu">
   UPDATE menu SET
<if test="nome!= null">nome = #{nome},</if>
<if test="label!= null">label = #{label},</if>
<if test="status!= null">status = #{status},</if>
<if test="nivel!= null">nivel = #{nivel},</if>
<if test="permissao!= null">permissao = #{permissao.id},</if>
<if test="help!= null">help = #{help.id},</if>
<if test="parentId!= null"> parentId=#{parentId},</if>
<if test="tabelaEnumValue!= null"> tabelaEnumValue=#{tabelaEnumValue},</if>
<if test="emprId!= null"> emprId=#{emprId},</if>
<if test="processId!= null"> processId=#{processId},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deleteMenuById" parameterType="Menu">
  DELETE FROM menu WHERE id = #{id}
 </delete>

 <delete id="deleteAllMenus">
 DELETE FROM menu
  </delete>
</mapper>


