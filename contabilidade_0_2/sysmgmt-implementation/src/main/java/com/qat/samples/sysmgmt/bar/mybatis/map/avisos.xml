<mapper namespace="AvisosMap">
 <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
 <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

  <!-- Result maps describe the mapping between the columns returned
      from a query, and the class properties.  A result map isnt
      necessary if the columns (or aliases) match to the properties
       exactly. -->
  <resultMap id="AvisosResult" type="Avisos">
    <result property="id" column="id"/>
<result property="parentId" column="parentId"/>
<result property="tabelaEnumValue" column="tabelaEnumValue"/>
<result property="emprId" column="emprId"/>
<result property="processId" column="processId"/>
<result property="createUser" column="create_user"/>
<result property="createDateUTC" column="create_date"/>
<result property="modifyUser" column="modify_user"/>
<result property="modifyDateUTC" column="modify_date"/>
  </resultMap>

  <sql id="allAvisosColumns">
parentId
,tabelaEnumValue
,emprId
,processId
,create_date
,create_user
,modify_date
,modify_user

</sql>
<sql id="allAvisosValues">
     #{parentId},
     #{tabelaEnumValue},
     #{emprId},
     #{processId},
     #{createDateUTC},
     #{createUser},
     #{modifyDateUTC},
     #{modifyUser}
  </sql>


 <select id="fetchAllAvisoss" resultMap="AvisosResult">
    SELECT id,
 <include refid="allAvisosColumns" />
   FROM avisos ORDER BY id ASC
 </select>

 <select id="fetchAvisosById" parameterType="Integer" resultMap="AvisosResult">
    SELECT id,
 <include refid="allAvisosColumns" />
   FROM avisos WHERE id = #{fetchid}
 </select>

 <select id="fetchAllAvisossRequest" parameterType="AvisoInquiryRequest" resultMap="AvisosResult">

     SELECT id,<include refid="allAvisosColumns" />
           FROM avisos where 0 = 0 <if test="criteria.emprId != null"> and emprId = criteria.emprId</if> ORDER BY id ASC
       OFFSET ( #{startPage} * #{pageSize} )
       LIMIT #{pageSize}
</select>

<select id="fetchAvisosRowCount" resultType="Integer">
     SELECT COUNT(*) AS RECORD_COUNT FROM avisos WHERE id IS NOT NULL <if test="criteria.emprId != null"> and emprId = criteria.emprId</if>

 </select>

 <insert id="insertAvisos" parameterType="Avisos" useGeneratedKeys="true" keyProperty="id">
     INSERT INTO avisos (
 <if test="id != null"><if test="id > 0">id,</if></if><include refid="allAvisosColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allAvisosValues" /> )
 </insert>

 <update id="updateAvisos" parameterType="Avisos">
   UPDATE avisos SET
<if test="parentId!= null"> parentId=#{parentId},</if>
<if test="tabelaEnumValue!= null"> tabelaEnumValue=#{tabelaEnumValue},</if>
<if test="emprId!= null"> emprId=#{emprId},</if>
<if test="processId!= null"> processId=#{processId},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deleteAvisosById" parameterType="Avisos">
  DELETE FROM avisos WHERE id = #{id}
 </delete>

 <delete id="deleteAllAvisoss">
 DELETE FROM avisos
  </delete>
