<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ClienteMap">


	<!-- Result maps describe the mapping between the columns returned from
		a query, and the class properties. A result map isnt necessary if the columns
		(or aliases) match to the properties exactly. -->
	<resultMap id="clienteResult" type="Cliente" extends="PessoaMap.PessoaResult">
	</resultMap>

	<sql id="allClienteColumns">
		<include refid="PessoaMap.allPessoaColumns" />
	</sql>
	<sql id="allClienteValues">
		<include refid="PessoaMap.allPessoaValues" />
	</sql>

	<select id="fetchAllClientes" resultMap="clienteResult">
		SELECT
		<include refid="allClienteColumns" />
		FROM pessoa where pessoaTypeEnum = 1 ORDER BY id ASC
	</select>

	<select id="fetchClienteById" parameterType="Integer" resultMap="clienteResult">
		SELECT id,
		<include refid="allClienteColumns" />
		FROM pessoa WHERE id = #{fetchid}
	</select>

	<select id="fetchAllClientesRequest" parameterType="ClienteInquiryRequest"
		resultMap="clienteResult">

		select p.* from pessoa p left join pessoatipo t  on(p.id = t.parentid) where t.pessoatypeenum = 1
		<if test="permissaoTypeEnumValue == 1">
			and pessoa.id IS NOT NULL
		</if>
		<if test="permissaoTypeEnumValue != 1">
			<if test="emprId == null">
				<if test="emprIds != null"> and p.emprId in

				<foreach item="item" index="index" collection="emprIds"
		             open="(" separator="," close=")">
		        #{item}
		    	</foreach>

				</if>
			</if>
			<if test="emprId != null"> and p.emprId = #{emprId}</if>
		</if>
		<if test="id != null and id > 0"> and p.id = #{id}</if>
		ORDER BY p.nome ASC




	</select>

	<select id="fetchClienteRowCount" parameterType="ClienteInquiryRequest"
		resultType="Integer">

		SELECT COUNT(pessoa.*) AS RECORD_COUNT from pessoa , pessoaTipo where
		pessoaTipo.parentId = pessoa.id and pessoaTipo.pessoaTypeEnum = 1
		<if test="permissaoTypeEnumValue == 1">
			and pessoa.id IS NOT NULL
		</if>
		<if test="permissaoTypeEnumValue != 1">
			<if test="emprId == null">
				<if test="emprIds != null"> and pessoa.emprId in

				<foreach item="item" index="index" collection="emprIds"
		             open="(" separator="," close=")">
		        #{item}
		    	</foreach>

				</if>
			</if>
			<if test="emprId != null"> and pessoa.emprId = #{emprId}</if>
		</if>
		<if test="id != null and id > 0"> and pessoa.id = #{id}</if>


	</select>
</mapper>


