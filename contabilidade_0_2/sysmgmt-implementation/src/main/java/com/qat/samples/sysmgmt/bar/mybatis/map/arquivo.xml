<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ArquivoMap">
 <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
 <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

  <!-- Result maps describe the mapping between the columns returned
      from a query, and the class properties.  A result map isnt
      necessary if the columns (or aliases) match to the properties
       exactly. -->
  <resultMap id="ArquivoResult" type="Arquivo">
    <result property="id" column="id"/>
    <result property="nome" column="nome"/>
    <result property="local" column="local"/>
    <result property="tipo" column="tipo"/>
    <result property="tamanho" column="tamanho"/>
<result property="parentId" column="parentId"/>
<result property="tabelaEnumValue" column="tabelaEnumValue"/>
<result property="emprId" column="emprId"/>
<result property="processId" column="processId"/>
<result property="createUser" column="create_user"/>
<result property="createDateUTC" column="create_date"/>
<result property="modifyUser" column="modify_user"/>
<result property="modifyDateUTC" column="modify_date"/>
  </resultMap>

  <sql id="allArquivoColumns">
nome
,local
,tipo
,tamanho
,parentId
,tabelaEnumValue
,emprId
,processId
,create_date
,create_user
,modify_date
,modify_user

</sql>
<sql id="allArquivoValues">
#{nome},
#{local},
#{tipo},
#{tamanho},
     #{parentId},
     #{tabelaEnumValue},
     #{emprId},
     #{processId},
     #{createDateUTC},
     #{createUser},
     #{modifyDateUTC},
     #{modifyUser}
  </sql>


 <select id="fetchAllArquivos" resultMap="ArquivoResult">
    SELECT id,
 <include refid="allArquivoColumns" />
   FROM arquivo ORDER BY id ASC
 </select>

 <select id="fetchArquivoById" parameterType="Integer" resultMap="ArquivoResult">
    SELECT id,
 <include refid="allArquivoColumns" />
   FROM arquivo WHERE id = #{fetchid}
 </select>

  <select id="fetchArquivoByProcessoId" parameterType="Integer" resultMap="ArquivoResult">
    SELECT id,
 <include refid="allArquivoColumns" />
   FROM arquivo WHERE tabelaEnumValue = 73 and parentId = #{fetchid}
 </select>

 <select id="fetchAllArquivosRequest" parameterType="PagedInquiryRequest" resultMap="ArquivoResult">

     SELECT id,<include refid="allArquivoColumns" />
           FROM arquivo
           where 0 = 0
           <if test="permissaoTypeEnumValue == 1">
               and id IS NOT NULL
            </if>
           <if test="permissaoTypeEnumValue != 1">
               <if test="emprId == null">
                   <if test="emprIds != null">
                       and emprId in

                     <foreach item="item" index="index" collection="emprIds"
                          open="(" separator="," close=")">
                         #{item}
                     </foreach>

                 </if>
             </if>
               <if test="emprId != null"> and emprId = #{emprId}</if>
           </if>
           ORDER BY id ASC
</select>

<select id="fetchArquivoRowCount" resultType="Integer">
     SELECT COUNT(*) AS RECORD_COUNT FROM arquivo WHERE id IS NOT NULL <if test="emprId != null"> and emprId = emprId</if>

 </select>

 <insert id="insertArquivo" parameterType="Arquivo" useGeneratedKeys="true" keyProperty="id">
     INSERT INTO arquivo (
 <if test="id != null"><if test="id > 0">id,</if></if><include refid="allArquivoColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allArquivoValues" /> )
 </insert>

 <update id="updateArquivo" parameterType="Arquivo">
   UPDATE arquivo SET
<if test="nome!= null">nome = #{nome},</if>
<if test="local!= null">local = #{local},</if>
<if test="tipo!= null">tipo = #{tipo},</if>
<if test="tamanho!= null">tamanho = #{tamanho},</if>
<if test="parentId!= null"> parentId=#{parentId},</if>
<if test="tabelaEnumValue!= null"> tabelaEnumValue=#{tabelaEnumValue},</if>
<if test="emprId!= null"> emprId=#{emprId},</if>
<if test="processId!= null"> processId=#{processId},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deleteArquivoById" parameterType="Arquivo">
  DELETE FROM arquivo WHERE id = #{id}
 </delete>

 <delete id="deleteAllArquivos">
 DELETE FROM arquivo
  </delete>
</mapper>


