<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="EventosMap">
 <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
 <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

  <!-- Result maps describe the mapping between the columns returned
      from a query, and the class properties.  A result map isnt
      necessary if the columns (or aliases) match to the properties
       exactly. -->
  <resultMap id="EventosResult" type="Eventos">
    <result property="id" column="id"/>
    <result property="nome" column="nome"/>
    <result property="codigo" column="codigo"/>
    <result property="descricao" column="descricao"/>
    <result property="valor" column="valor"/>
    <result property="porcentagem" column="porcentagem"/>

    <result property="isSistema" column="isSistema"/>
    <result property="isMensal" column="isMensal"/>
<result property="parentId" column="parentId"/>
<result property="tabelaEnumValue" column="tabelaEnumValue"/>
<result property="emprId" column="emprId"/>
<result property="processId" column="processId"/>
<result property="createUser" column="create_user"/>
<result property="createDateUTC" column="create_date"/>
<result property="modifyUser" column="modify_user"/>
<result property="modifyDateUTC" column="modify_date"/>
<collection property="tipo" column="tipo" select="DoisValorMap.fetchDoisValorById"/>
  </resultMap>

  <sql id="allEventosColumns">
nome
,codigo
,descricao
,valor
,porcentagem
,tipo
,isSistema
,isMensal
,parentId
,tabelaEnumValue
,emprId
,processId
,create_date
,create_user
,modify_date
,modify_user

</sql>
<sql id="allEventosValues">
#{nome},
#{codigo},
#{descricao},
#{valor},
#{porcentagem},
#{tipo.id},
#{isSistema},
#{isMensal},
     #{parentId},
     #{tabelaEnumValue},
     #{emprId},
     #{processId},
     #{createDateUTC},
     #{createUser},
     #{modifyDateUTC},
     #{modifyUser}
  </sql>


 <select id="fetchAllEventos" resultMap="EventosResult">
    SELECT id,
 <include refid="allEventosColumns" />
   FROM eventos ORDER BY id ASC
 </select>

 <select id="fetchEventosById" parameterType="Integer" resultMap="EventosResult">
    SELECT id,
 <include refid="allEventosColumns" />
   FROM eventos WHERE id = #{fetchid}
 </select>

 <select id="fetchAllEventosRequest" parameterType="EventoInquiryRequest" resultMap="EventosResult">

     SELECT id,<include refid="allEventosColumns" />
           FROM eventos where 0 = 0 <if test="criteria.emprId != null"> and emprId = criteria.emprId</if> ORDER BY id ASC
       OFFSET ( #{startPage} * #{pageSize} )
       LIMIT #{pageSize}
</select>

<select id="fetchEventosRowCount" resultType="Integer">
     SELECT COUNT(*) AS RECORD_COUNT FROM eventos WHERE id IS NOT NULL <if test="criteria.emprId != null"> and emprId = criteria.emprId</if>

 </select>

 <insert id="insertEventos" parameterType="Eventos" useGeneratedKeys="true" keyProperty="id">
     INSERT INTO eventos (
 <if test="id != null"><if test="id > 0">id,</if></if><include refid="allEventosColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allEventosValues" /> )
 </insert>

 <update id="updateEventos" parameterType="Eventos">
   UPDATE eventos SET
<if test="nome!= null">nome = #{nome},</if>
<if test="codigo!= null">codigo = #{codigo},</if>
<if test="descricao!= null">descricao = #{descricao},</if>
<if test="valor!= null">valor = #{valor},</if>
<if test="porcentagem!= null">porcentagem = #{porcentagem},</if>
<if test="tipo!= null">tipo = #{tipo.id},</if>
<if test="isSistema!= null">isSistema = #{isSistema},</if>
<if test="isMensal!= null">isMensal = #{isMensal},</if>
<if test="parentId!= null"> parentId=#{parentId},</if>
<if test="tabelaEnumValue!= null"> tabelaEnumValue=#{tabelaEnumValue},</if>
<if test="emprId!= null"> emprId=#{emprId},</if>
<if test="processId!= null"> processId=#{processId},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deleteEventosById" parameterType="Eventos">
  DELETE FROM eventos WHERE id = #{id}
 </delete>

 <delete id="deleteAllEventos">
 DELETE FROM eventos
  </delete>


   <resultMap id="eventoMesAppResult" type="BeneficioMesApp">
    <result property="data" column="data" />
   	<result property="idFuncBenef" column="idFuncBenef"/>
  </resultMap>

  <resultMap id="eventoPessoaResult" type="EventoPessoa">
    <result property="data" column="data" />
   	<result property="idFunc" column="idFunc"/>
  </resultMap>

  <sql id="allEventoAppplyColumns">
		 data
		,idEvent
		,idFunc
      	,processId
      	,create_date
      	,create_user
      	,modify_date
      	,modify_user
  </sql>

  <sql id="allEventoApplyValues">
  		#{data},
  		#{idEvent.id},
    	#{idFunc},
    	#{processId},
    	<include refid="CBOFMap.changeControlFields"/>
  </sql>

  <insert id="insertEventosPessoa" parameterType="EventoPessoa" useGeneratedKeys="true" keyProperty="id">
  	INSERT INTO EventoFunc (
		<include refid="allEventoAppplyColumns" />
      )
    VALUES (<include refid="allEventoApplyValues" /> )
  </insert>

      <update id="updateEventoPessoa" parameterType="EventoPessoa">
    UPDATE eventoFunc
    	<set>
    		<if test="data!= null">data = #{data},</if>
    		<if test="idEvent.id!= null">idEvent = #{idEvent.id},</if>
	    	<if test="idFunc!= null"> idFunc=#{idFunc},</if>
			<if test="modifyDataUTC!= null"> modify_date=#{modifyDataUTC},</if>
			<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
		</set>
    WHERE
     id = #{id}
  </update>

   <delete id="deleteEventoPessoaById" parameterType="Integer">
    	DELETE FROM eventoFunc WHERE id = #{id}
  </delete>

    <select id="fetchFuncByEvento" parameterType="Integer" resultMap="eventoPessoaResult">
	SELECT
	<include refid="allEventoAppplyColumns" />

		  FROM eventoFunc
		where  idFunc =  #{id}
  </select>


</mapper>