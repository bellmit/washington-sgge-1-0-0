<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SocioMap">
 <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
 <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

  <!-- Result maps describe the mapping between the columns returned
      from a query, and the class properties.  A result map isnt
      necessary if the columns (or aliases) match to the properties
       exactly. -->
  <resultMap id="SocioResult" type="Socio">
    <result property="id" column="id"/>
    <result property="socioAdm" column="socioAdm"/>
    <result property="cota" column="cota"/>
    <result property="porcentagem" column="porcentagem"/>
    <result property="dataProlabore" column="dataProlabore"/>
	<result property="valorProlabore" column="valorProlabore"/>
<result property="parentId" column="parentId"/>
<result property="tabelaEnumValue" column="tabelaEnumValue"/>
<result property="emprId" column="emprId"/>
<result property="processId" column="processId"/>
<result property="createUser" column="create_user"/>
<result property="createDateUTC" column="create_date"/>
<result property="modifyUser" column="modify_user"/>
<result property="modifyDateUTC" column="modify_date"/>
<collection property="pessoa" column="pessoa" select="PessoaMap.fetchPessoaById"/>
  </resultMap>

  <sql id="allSocioColumns">
socioAdm
,cota
,porcentagem
,parentId
,tabelaEnumValue
,emprId
,processId
,create_date
,create_user
,modify_date
,modify_user
,pessoa
,dataProlabore
,valorProlabore
</sql>
<sql id="allSocioValues">
#{socioAdm},
#{cota},
#{porcentagem},
     #{parentId},
     #{tabelaEnumValue},
     #{emprId},
     #{processId},
     #{createDateUTC},
     #{createUser},
     #{modifyDateUTC},
     #{modifyUser},
     #{pessoa.id},
     #{dataProlabore},
     #{valorProlabore}
  </sql>


 <select id="fetchAllSocios" resultMap="SocioResult">
    SELECT id,
 <include refid="allSocioColumns" />
   FROM socio ORDER BY id ASC
 </select>


<select id="fetchSocioByEmpresaId" parameterType="Integer" resultMap="SocioResult">
    SELECT id,
 <include refid="allSocioColumns" />
   FROM socio WHERE parentId = #{fetchid}
 </select>

 <select id="fetchSocioById" parameterType="Integer" resultMap="SocioResult">
    SELECT id,
 <include refid="allSocioColumns" />
   FROM socio WHERE id = #{fetchid}
 </select>

 <select id="fetchAllSociosRequest" parameterType="PagedInquiryRequest" resultMap="SocioResult">

     SELECT id,<include refid="allSocioColumns" />
           FROM socio where 0 = 0 <if test="emprId != null"> and emprId = emprId</if> ORDER BY id ASC
       OFFSET ( #{startPage} * #{pageSize} )
       LIMIT #{pageSize}
</select>

<select id="fetchSocioRowCount" resultType="Integer">
     SELECT COUNT(*) AS RECORD_COUNT FROM socio WHERE id IS NOT NULL <if test="emprId != null"> and emprId = emprId</if>

 </select>

 <insert id="insertSocio" parameterType="Socio" useGeneratedKeys="true" keyProperty="id">
     INSERT INTO socio (
 <if test="id != null"><if test="id > 0">id,</if></if><include refid="allSocioColumns" />
     )
   VALUES (<if test="id != null"><if test="id > 0">#{id},</if></if><include refid="allSocioValues" /> )
 </insert>

 <update id="updateSocio" parameterType="Socio">
   UPDATE socio SET
<if test="socioAdm!= null">socioAdm = #{socioAdm},</if>
<if test="cota!= null">cota = #{cota},</if>
<if test="dataProlabore!= null">dataProlabore = #{dataProlabore},</if>
<if test="valorProlabore!= null">valorProlabore = #{valorProlabore},</if>
<if test="porcentagem!= null">porcentagem = #{porcentagem},</if>
<if test="parentId!= null"> parentId=#{parentId},</if>
<if test="tabelaEnumValue!= null"> tabelaEnumValue=#{tabelaEnumValue},</if>
<if test="emprId!= null"> emprId=#{emprId},</if>
<if test="processId!= null"> processId=#{processId},</if>
<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
   WHERE
    id = #{id}
 </update>

<delete id="deleteSocioById" parameterType="Socio">
  DELETE FROM socio WHERE id = #{id}
 </delete>

 <delete id="deleteAllSocios">
 DELETE FROM socio
  </delete>
</mapper>


